<div class="container">
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6">

        <div class="page-header">
          <h2>Üye Ol</h2>
        </div>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <% if @user.errors.present? %>
            <div class="alert alert-danger fade in alert-dismissable">
              <h2><%= pluralize(aid.errors.count, "error") %> prohibited this aid from being saved:</h2>

              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
            <div class="page-header">
              <h4>Hesap Bilgileri </h4>
            </div>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :parola %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :Parola_onayı %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>


              <div class="page-header">
                <h4>Kişisel Bilgiler</h4>
              </div>

              <div class="form-group">
                <%= f.label :isim %><br />
                <%= f.text_field :name, autocomplete: "off", class: 'form-control' %>
              </div>


              <div class="form-group">
                <%= f.label :soyisim %><br />
                <%= f.text_field :surname, autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :telefon_numarası %><br />
                <%= f.text_field :gsm, autocomplete: "off", class: 'form-control' %>
              </div>

            <div>
              <%= f.submit "Kayıt ol", :class=>'btn btn-primary btn-block'%>

            </div>
          <% end %>

          <%= render "devise/shared/links" %>

      </div>
      <div class="col-md-3">
      </div>
    </div>
  </div>
