<%= form_with(model: aid, local: true) do |form| %>
  <% if aid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(aid.errors.count, "error") %> : Kaydedilemedi lütfen tekrar deneyiniz.</h2>

      <ul>
      <% aid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br>


  <div class="container", id="adresid">
    <br>
    <div class="field">
      <%= form.label :yardım_başlığı %>
      <%= form.text_field :title, id: :aid_title, class: 'form-control' %>
    </div>


    <br>

    <div class="row">
        <div class="form-group col-md-6">
          <%= form.label :yardım_kategori %>
          <%= form.collection_select :category, Aid::CATEGORY, :to_s, :to_s, :class=>'dropdown-menu' %>
        </div>

      <div class="form-group col-md-6">
        <%= form.label :yardım_tipi %>
        <%= form.collection_select :aid_type, Aid::TYPE, :to_s, :to_s, :class=>'form-control' %>
      </div>
    </div>
    <br>
    <div class="field">
      <%= form.label :ihtiyaç_sahibi_adı %>
      <%= form.text_field :needy_name, id: :aid_needy_name, :class=>'form-control' %>
    </div>
    <br>
    <div class="field">
      <%= form.label :açıklama %>
      <%= form.text_area :explanation, id: :aid_explanation, :class=>'form-control' %>
    </div>
    <br>
  </div>



  <br><br>

  <div class="container" id="adresid">
    <br>
    <div class="row">

      <div class="form-group col-md-4">
        <%= form.label :İl %>
        <%= form.collection_select :il, Aid::IL, :to_s, :to_s, :id=>"deneme" %>
      </div>





      <div class="form-group col-md-4">
        <%= form.label :ilce %>
        <%= form.text_field :ilce, id: :aid_ilce, :class=>'form-control' %>
      </div>

      <div class="form-group col-md-4">
        <%= form.label :mahalle %>
        <%= form.text_field :mahalle, id: :aid_mahalle, :class=>'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-4">
        <%= form.label :cadde %>
        <%= form.text_field :cadde, id: :aid_cadde, :class=>'form-control' %>
      </div>

      <div class="form-group col-md-4">
        <%= form.label :sokak %>
        <%= form.text_field :sokak, id: :aid_sokak, :class=>'form-control' %>
      </div>

      <div class="form-group col-md-4">
        <%= form.label :no %>
        <%= form.number_field :no, id: :aid_no, :class=>'form-control'%>
      </div>

    </div>
  </div>
  <br>

  <div class="container" style="width: 900px;">
    <div class="actions">
      <%= form.submit "Kaydet", :class=> 'btn btn-primary btn-block'%>
    </div>
  </div>
<% end %>
<br><br>



<style>
  #adresid{
    border-style: solid;
    border-width: 1px;
    border-color: #475846;
    border-radius: 10px;

    width: 900px;
  }
</style>

<script type="text/javascript">

$(document).ready(function(){
  $("select").addClass("form-control");
});
</script>
